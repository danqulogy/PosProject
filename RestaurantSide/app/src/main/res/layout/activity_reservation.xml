<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ReservationActivity">

    <TextView
        android:id="@+id/reservation_detail_table_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="15sp"
        android:text="@string/placeholder"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/reservation_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginBottom="5sp"
        android:text="@string/placeholder"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/reservation_detail_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginBottom="15sp"
        android:text="@string/placeholder"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reservation_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/datePlaceholder"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reservation_detail_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/timePlaceHolder"
            android:textAlignment="textEnd"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reservation_detail_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/minus"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reservation_detail_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/timePlaceHolder"
            android:textAlignment="viewStart"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reservation_detail_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tableFor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/reservation_detail_persons_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:text="@string/intPlaceholder"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/reservation_detail_cancel"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="30sp"
        android:text="@string/cancelButton"
        android:textColor="#FF0404" />

</LinearLayout>